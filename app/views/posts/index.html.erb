<div class="jumbotron">
<%= form_tag posts_path, :method => 'get' do %>
<h4> SEARCH HERE BY TITLE </h4>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :title => nil %>
  </p>
<% end %>

</div>

<div class="panel panel-default">
<div class="panel-heading">
<h1>LIST OF POSTS</h1>
</div>

<div class="panel-body">
<table class="table">
  <thead>
    <tr>
      <th>POST_ID</th>
      <th class="one">POST</th>
      <th>USER</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.model.email %></td>
        <td><%= link_to 'Show', post, class: "btn btn-sm btn-default" %></td>
      
        
      
        <td><%= link_to 'Destroy', post, class: "btn btn-sm btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-lg btn-info btn-margin3" %>
