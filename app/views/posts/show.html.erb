<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<p class="panel-heading">
		<strong></strong>
		  	POSTED BY <%= @post.model.email %>
	</p>


	<div class="panel-body">

		<p>
		  <strong></strong>
		  <%= @post.title %>
		</p>
	</div>
</div>
		


<% if (current_model.email) == (@post.model.email) %>

	<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-sm btn-info' %> 
	<%= link_to 'Back', posts_path, class: 'btn btn-sm btn-info' %>
<% else %> 
	<%= link_to 'Back', posts_path, class: 'btn btn-sm btn-info' %> 
<% end %>

<div class="panel-group" id="accordion">
	<div class="panel panel-default">
		<div class="panel-heading">
		<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
			<h2 class="panel-title"> 			
				PREVIOUS COMMENTS <br>
				<h6> Click to show/hide comments </h6>
			</h2>
		</a>
		</div>
			<div id="collapseOne" class="panel-collapse collapse in">
				<div class="panel-body">
					 <% @comments.each do |c| %> <br>
					 <ol class="breadcrumb">
					  <%= c.body %> <br>
					  <%= c.model.email %> <br>
					  for the post <%= c.post.id %>
					 </ol>
					 <% end %>
				</div>
			</div>
	</div>
</div>
  

<br /><h3> Comment here </h3><br />
<%= render 'comments/form' %>

